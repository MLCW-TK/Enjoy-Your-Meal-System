package enjoyyourmeal.Meals;

import static org.junit.Assert.*;

import org.junit.Test;

public class IngredientTest {
	Ingredient TestIngredient = new Ingredient("test", 1, 1.56);
	
	
	@Test(expected = RuntimeException.class)
	public void QuantityCannotBeNegative() {
		Ingredient TestIngredient = new Ingredient("test", -1, 1.56);
		fail("quantity cannot be negative");
	}
	
	@Test(expected = RuntimeException.class)
	public void CannotRemoveZeroQuantity(){
		TestIngredient.removeQuantity(2);
		fail("quantity cannot be negative");
	}

}
